<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="card-title mb-0">
                    <i class="bi bi-envelope"></i> İletişim
                </h2>
            </div>
            <div class="card-body">
                <p class="lead mb-4">
                    Bize ulaşmak için aşağıdaki formu doldurun. Size en kısa sürede geri dönüş yapacağız.
                </p>
                
                <form id="contactForm" novalidate>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="ad" class="form-label">
                                <i class="bi bi-person"></i> Ad <span class="text-danger">*</span>
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="ad" 
                                name="ad" 
                                placeholder="Adınızı giriniz"
                                required
                                minlength="2"
                                maxlength="50"
                            >
                            <div class="invalid-feedback">
                                Lütfen geçerli bir ad giriniz (en az 2 karakter).
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="soyad" class="form-label">
                                <i class="bi bi-person"></i> Soyad <span class="text-danger">*</span>
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="soyad" 
                                name="soyad" 
                                placeholder="Soyadınızı giriniz"
                                required
                                minlength="2"
                                maxlength="50"
                            >
                            <div class="invalid-feedback">
                                Lütfen geçerli bir soyad giriniz (en az 2 karakter).
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="mesaj" class="form-label">
                            <i class="bi bi-chat-left-text"></i> Mesaj <span class="text-danger">*</span>
                        </label>
                        <textarea 
                            class="form-control" 
                            id="mesaj" 
                            name="mesaj" 
                            rows="5"
                            placeholder="Mesajınızı buraya yazınız..."
                            required
                            minlength="10"
                            maxlength="1000"
                        ></textarea>
                        <div class="form-text">
                            Minimum 10, maksimum 1000 karakter.
                        </div>
                        <div class="invalid-feedback">
                            Lütfen en az 10 karakterlik bir mesaj giriniz.
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="reset" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-counterclockwise"></i> Temizle
                        </button>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-send"></i> Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- İletişim Bilgileri ve Harita Bölümü -->
        <div class="row mt-5">
            <div class="col-12 text-center mb-4">
                <h3 class="fw-bold text-primary">
                    <i class="bi bi-geo-alt-fill"></i> Bize Ulaşın
                </h3>
                <p class="text-muted">Sorularınız için aşağıdaki kanallardan bize ulaşabilir veya ofisimizi ziyaret edebilirsiniz.</p>
            </div>
            
            <div class="col-md-5 mb-4 mb-md-0">
                <div class="card h-100 border-0 shadow-sm bg-light">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold mb-4">İletişim Bilgileri</h5>
                        
                        <div class="d-flex align-items-start mb-4">
                            <div class="flex-shrink-0 bg-white p-3 rounded-circle shadow-sm text-primary">
                                <i class="bi bi-geo-alt fs-4"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="fw-bold mb-1">Adres</h6>
                                <p class="text-muted mb-0">Kazlıçeşme, 245. Sk. No:5, 34020<br>Zeytinburnu/İstanbul</p>
                            </div>
                        </div>
                        
                        <div class="d-flex align-items-start mb-4">
                            <div class="flex-shrink-0 bg-white p-3 rounded-circle shadow-sm text-primary">
                                <i class="bi bi-telephone fs-4"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="fw-bold mb-1">Telefon</h6>
                                <p class="text-muted mb-0">+90 (212) 123 45 67</p>
                            </div>
                        </div>
                        
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0 bg-white p-3 rounded-circle shadow-sm text-primary">
                                <i class="bi bi-envelope fs-4"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="fw-bold mb-1">E-posta</h6>
                                <p class="text-muted mb-0">info@topkapi.edu.tr</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-7">
                <div class="card h-100 border-0 shadow-sm overflow-hidden">
                    <div class="card-body p-0">
                        <!-- Sahte Harita Görseli (Placeholder) -->
                        <div class="bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center h-100" style="min-height: 300px; background-image: url('https://placehold.co/800x400/e9ecef/495057?text=Harita+G%C3%B6r%C3%BCnt%C3%BCs%C3%BC'); background-size: cover; background-position: center;">
                            <div class="bg-white p-3 rounded shadow-sm opacity-75">
                                <i class="bi bi-geo-alt-fill text-danger fs-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // HTML5 form validasyonu
    (function() {
        'use strict';
        const form = document.getElementById('contactForm');
        
        form.addEventListener('submit', function(event) {
            event.preventDefault();
            
            if (!form.checkValidity()) {
                event.stopPropagation();
                form.classList.add('was-validated');
                return;
            }
            
            // Form geçerliyse sayfayı yenile
            form.classList.add('was-validated');
            window.location.reload();
        }, false);
        
        // Reset butonu için
        form.addEventListener('reset', function() {
            form.classList.remove('was-validated');
        });
    })();
</script>

