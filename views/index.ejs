<%- include('partials/header') %>

<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="card-title mb-0">
                    <i class="bi bi-book"></i> Kitaplık Yönetim Sistemi
                </h2>
                <a href="/add-book" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle"></i> Yeni Kitap Ekle
                </a>
            </div>
            <div class="card-body">
                <% if (books && books.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Ad</th>
                                    <th scope="col">Yazar</th>
                                    <th scope="col">Tür</th>
                                    <th scope="col">Yayın Yılı</th>
                                    <th scope="col" class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% books.forEach(book => { %>
                                    <tr>
                                        <td><%= book.id %></td>
                                        <td><strong><%= book.ad %></strong></td>
                                        <td><%= book.yazar %></td>
                                        <td>
                                            <span class="badge bg-info"><%= book.tür %></span>
                                        </td>
                                        <td><%= book.yayınYılı || book.yayın_yılı %></td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-warning btn-sm" onclick="editBook(<%= book.id %>)">
                                                    <i class="bi bi-pencil-square"></i> Düzenle
                                                </button>
                                                <button type="button" class="btn btn-danger btn-sm" onclick="deleteBook(<%= book.id %>)">
                                                    <i class="bi bi-trash"></i> Sil
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-info text-center" role="alert">
                        <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
                        <h4 class="mt-3">Henüz kitap eklenmemiş</h4>
                        <p class="mb-3">Sisteminize kitap eklemek için aşağıdaki butona tıklayın.</p>
                        <a href="/add-book" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> İlk Kitabınızı Ekleyin
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    function editBook(id) {
        // Düzenleme işlemi için route'a yönlendirme
        window.location.href = `/edit/${id}`;
    }
    
    function deleteBook(id) {
        if (confirm('Bu kitabı silmek istediğinizden emin misiniz?')) {
            // Silme işlemi için route'a yönlendirme
            window.location.href = `/delete/${id}`;
        }
    }
</script>

<%- include('partials/footer') %>
