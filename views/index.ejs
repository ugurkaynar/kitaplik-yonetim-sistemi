<%- include('partials/header') %>

<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="card-title text-primary fw-bold mb-0">
                        <i class="bi bi-journal-bookmark-fill me-2"></i>Kayıtlı Kitap Arşivi
                    </h2>
                    <a href="/add-book" class="btn btn-success rounded-pill px-4">
                        <i class="bi bi-plus-lg me-1"></i> Yeni Kitap Ekle
                    </a>
                </div>
                
                <form action="/books" method="GET" class="mb-4">
                    <div class="input-group input-group-lg shadow-sm">
                        <span class="input-group-text bg-white text-muted border-end-0 ps-4">
                            <i class="bi bi-search"></i>
                        </span>
                        <input 
                            type="text" 
                            name="search" 
                            class="form-control border-start-0 ps-2" 
                            placeholder="Kitap adı, yazar veya tür ara..." 
                            value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
                            style="border-left: none;"
                        >
                        <button class="btn btn-primary px-4" type="submit">Ara</button>
                        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                            <a href="/books" class="btn btn-outline-secondary px-4">Temizle</a>
                        <% } %>
                    </div>
                </form>
            </div>
            
            <div class="card-body px-4">
                <% if (books && books.length > 0) { %>
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <span class="badge bg-light text-dark border rounded-pill fs-6 px-3 py-2">
                            <i class="bi bi-collection me-1"></i> Toplam Kitap: <strong><%= books.length %></strong>
                        </span>
                    </div>
                    <div class="table-responsive rounded-3 shadow-sm">
                        <table class="table table-hover table-borderless align-middle mb-0 bg-white">
                            <thead class="bg-light text-secondary">
                                <tr>
                                    <th scope="col" class="py-3 ps-4">ID</th>
                                    <th scope="col" class="py-3">Ad</th>
                                    <th scope="col" class="py-3">Yazar</th>
                                    <th scope="col" class="py-3">Tür</th>
                                    <th scope="col" class="py-3">Yayın Yılı</th>
                                    <th scope="col" class="py-3 text-center pe-4">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% books.forEach(book => { %>
                                    <tr class="border-bottom">
                                        <td class="ps-4 text-muted">#<%= book.id %></td>
                                        <td><strong class="text-dark"><%= book.ad %></strong></td>
                                        <td class="text-secondary"><%= book.yazar %></td>
                                        <td>
                                            <span class="badge bg-info bg-opacity-10 text-info border border-info rounded-pill px-3"><%= book.tür %></span>
                                        </td>
                                        <td class="text-secondary"><%= book.yayınYılı || book.yayın_yılı %></td>
                                        <td class="text-center pe-4">
                                            <div class="btn-group shadow-sm" role="group">
                                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="editBook('<%= book.id %>')" title="Düzenle">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="deleteBook('<%= book.id %>')" title="Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                    <div class="text-center py-5">
                        <div class="mb-3 text-warning">
                            <i class="bi bi-search" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="text-muted fw-normal">Aradığınız kriterlere uygun kitap bulunamadı.</h4>
                        <p class="text-muted mb-4">Lütfen farklı bir arama terimi deneyin.</p>
                        <a href="/books" class="btn btn-warning rounded-pill px-4 shadow-sm">
                            <i class="bi bi-arrow-counterclockwise me-2"></i> Aramayı Temizle
                        </a>
                    </div>
                <% } else { %>
                    <div class="text-center py-5 bg-light rounded-3 border border-dashed">
                        <div class="mb-3 text-primary opacity-50">
                            <i class="bi bi-journal-plus" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-dark fw-bold">Henüz kitap eklenmemiş</h3>
                        <p class="text-muted mb-4 fs-5">Kütüphanenizi oluşturmaya hemen başlayın!</p>
                        <a href="/add-book" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm hover-scale">
                            <i class="bi bi-plus-lg me-2"></i> İlk Kitabınızı Ekleyin
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    function editBook(id) {
        window.location.href = `/edit/${id}`;
    }
    
    function deleteBook(id) {
        if (confirm('Bu kitabı silmek istediğinizden emin misiniz?')) {
            window.location.href = `/delete/${id}`;
        }
    }
</script>

<%- include('partials/footer') %>
