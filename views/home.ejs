<%- include('partials/header') %>

<style>
.hero {
  background: linear-gradient(135deg, #0b1e3f 0%, #163a77 50%, #8b5e34 100%);
  color: #fff;
  padding: 4rem 1rem;
  border-radius: .75rem;
  box-shadow: 0 1rem 2rem rgba(0,0,0,.2);
  text-align: center;
}
.hero h1 {
  font-weight: 700;
  letter-spacing: .5px;
}
.hero p {
  font-size: 1.2rem;
  opacity: .9;
}
.card-modern {
  border: none;
  border-radius: .75rem;
  box-shadow: 0 .75rem 1.5rem rgba(0,0,0,.1);
}
.btn-wood {
  background-color: #8b5e34;
  color: #fff;
}
.btn-wood:hover {
  background-color: #6f4b2b;
  color: #fff;
}
</style>

<div class="container my-5">
  <div class="hero mb-5">
    <h1 class="display-5">
      <i class="bi bi-book"></i> Dijital Kütüphanenize Hoş Geldiniz
    </h1>
    <p class="mt-3">Kitaplarınızı yönetin, yeni dünyalar keşfedin</p>
    <div class="mt-4 d-flex justify-content-center gap-2">
      <a href="/books" class="btn btn-outline-light btn-lg">
        <i class="bi bi-collection"></i> Kitap Listesi
      </a>
      <a href="/add-book" class="btn btn-light btn-lg text-dark">
        <i class="bi bi-plus-circle"></i> Yeni Kitap Ekle
      </a>
    </div>
  </div>

  <div class="row g-4 justify-content-center">
    <div class="col-md-5">
      <div class="card card-modern">
        <div class="card-body text-center py-4">
          <i class="bi bi-collection" style="font-size:3rem;color:#163a77"></i>
          <h3 class="mt-3">Kitap Listesi</h3>
          <p class="text-muted">Tüm kitaplarınızı görüntüleyin ve yönetin.</p>
          <a href="/books" class="btn btn-primary btn-lg">
            <i class="bi bi-arrow-right-circle"></i> Listeye Git
          </a>
        </div>
      </div>
    </div>

    <div class="col-md-5">
      <div class="card card-modern">
        <div class="card-body text-center py-4">
          <i class="bi bi-plus-circle" style="font-size:3rem;color:#8b5e34"></i>
          <h3 class="mt-3">Yeni Kitap Ekle</h3>
          <p class="text-muted">Kütüphanenize yeni eserler ekleyin.</p>
          <a href="/add-book" class="btn btn-wood btn-lg">
            <i class="bi bi-plus-lg"></i> Ekle
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
